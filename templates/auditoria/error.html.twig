<!DOCTYPE html>

<html lang="en">
    <!--<![endif]-->
    <!-- BEGIN HEAD -->
    <head>
        <meta charset="utf-8"/>
        <title>
            {% block title %}
                {% if page_title is defined %}
                    {{ page_title ~ ' | ' ~ organization_name}}
                {% endif %}
                {% if application_name is defined %}
                    {{ application_name ~ ' | ' ~ organization_name}}
                {% endif %}
            {% endblock %}
        </title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
        <meta content="" name="description"/>
        <meta content="" name="author"/>
        <!-- No cache -->
        <meta http-equiv="cache-control" content="max-age=0" />
        <meta http-equiv="cache-control" content="no-cache" />
        <meta http-equiv="expires" content="0" />
        <meta http-equiv="pragma" content="no-cache" />

        {% set theme_path   = 'theme/' %}
        {% set js_path      = theme_path ~ 'js/' %}
        {% set css_path     = theme_path ~ 'css/' %}
        {% set plugins_path = theme_path ~ 'plugins/' %}
        {% set image_path = 'images/' %}

        <!-- BEGIN GLOBAL MANDATORY STYLES -->
        <!--begin::Fonts-->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700"/>        <!--end::Fonts-->

        <!--begin::Global Theme Styles(used by all pages)-->
        <link href="{{ asset(plugins_path ~ 'global/plugins.bundle.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset(plugins_path ~ 'custom/prismjs/prismjs.bundle.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset(css_path ~ 'style.bundle.css') }}" rel="stylesheet" type="text/css"/>
        <!--end::Global Theme Styles-->

        <!--begin::Layout Themes(used by all pages)-->

        <link href="{{ asset(css_path ~ 'themes/layout/header/base/light.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset(css_path ~ 'themes/layout/header/menu/light.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset(css_path ~ 'themes/layout/brand/light.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset(css_path ~ 'themes/layout/aside/dark.css') }}" rel="stylesheet" type="text/css"/>        <!--end::Layout Themes-->

        <style>
            @media (min-width: 992px){
                .header-fixed.subheader-fixed.subheader-enabled .wrapper {
                    padding-top: 0 !important;
                }
            }
        </style>

        <!--end::Layout Skins -->
    </head>
    <!-- END HEAD -->
    <!-- begin::Body -->
    <body id="kt_body"  class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed page-loading"  >
        <div class="d-flex flex-column flex-root">
            <div class="d-flex flex-row flex-column-fluid page">
                <div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper">
                    <!--begin::Header-->
                    <div id="kt_header" class="header header-fixed " >
                        <div class="container-fluid d-flex align-items-stretch justify-content-between">
                            <div class="header-menu-wrapper header-menu-wrapper-left" id="kt_header_menu_wrapper">
                                <div class="header-logo">
                                    <a href="{{ path(user is not null ? 'index_index' : 'homepage') }}">
                                        <img id="img-logo" width="150px" src="{{ asset(image_path ~ 'logo/logo.png') }}" alt="logo" />
                                    </a>
                                </div>                         
                            </div>     
                        </div>
                    </div>  

                    <!--begin::Error-->
                    <div class="error error-6 d-flex flex-row-fluid bgi-size-cover bgi-position-center" style="background-image: url({{ asset(theme_path ~ 'media/error/bg6.jpg') }});">
                        <!--begin::Content-->
                        <div class="d-flex flex-column flex-row-fluid text-center">
                            <h1 class="error-title font-weight-boldest text-white mb-12" style="margin-top: 12rem;">Ha ocurrido un error</h1>
                            <p class="display-4 font-weight-bold text-white">
                                {% if (status_code == 403) %}
                                    No tiene los permisos necesarios para realizar la acci&oacute;n solicitada
                                {% else %}
                                    Por favor comunicarse con el &aacute;rea de sistemas para posterior an&aacute;lisis.
                                {% endif %}
                            </p>
                            {% if errorNumber is defined %}
                                <p class="font-weight-bold text-white" style="font-size: 2em;">Error n&uacute;mero: {{ errorNumber }}</p>
                            {% endif %}

                            <div class="d-flex justify-content-center mt-10">
                                <button type="button" class="btn btn-light-dark" onclick="history.back();" style="width: 130px;">Volver</button>

                                <a href="{{ path(user is not null ? 'index_index' : 'homepage') }}" 
                                   class="btn btn-light-primary font-weight-bold ml-2" style="width: 130px;">Ir a Inicio</a>

                                {% if user is not null %}
                                    <a href="{{ path('app_logout') }}" class="btn btn-light-danger font-weight-bold ml-2" style="width: 130px;">Cerrar sesi&oacute;n </a>
                                {% endif %}
                            </div>

                        </div>
                        <!--end::Content-->
                    </div>
                    <!--end::Error-->

                </div>
            </div>
        </div>

        {% block javascripts %}

            <script>
                var KTAppSettings = {
                    "breakpoints": {
                        "sm": 576,
                        "md": 768,
                        "lg": 992,
                        "xl": 1200,
                        "xxl": 1400
                    },
                    "colors": {
                        "theme": {
                            "base": {
                                "white": "#ffffff",
                                "primary": "#3699FF",
                                "secondary": "#E5EAEE",
                                "success": "#1BC5BD",
                                "info": "#8950FC",
                                "warning": "#FFA800",
                                "danger": "#F64E60",
                                "light": "#E4E6EF",
                                "dark": "#181C32"
                            },
                            "light": {
                                "white": "#ffffff",
                                "primary": "#E1F0FF",
                                "secondary": "#EBEDF3",
                                "success": "#C9F7F5",
                                "info": "#EEE5FF",
                                "warning": "#FFF4DE",
                                "danger": "#FFE2E5",
                                "light": "#F3F6F9",
                                "dark": "#D6D6E0"
                            },
                            "inverse": {
                                "white": "#ffffff",
                                "primary": "#ffffff",
                                "secondary": "#3F4254",
                                "success": "#ffffff",
                                "info": "#ffffff",
                                "warning": "#ffffff",
                                "danger": "#ffffff",
                                "light": "#464E5F",
                                "dark": "#ffffff"
                            }
                        },
                        "gray": {
                            "gray-100": "#F3F6F9",
                            "gray-200": "#EBEDF3",
                            "gray-300": "#E4E6EF",
                            "gray-400": "#D1D3E0",
                            "gray-500": "#B5B5C3",
                            "gray-600": "#7E8299",
                            "gray-700": "#5E6278",
                            "gray-800": "#3F4254",
                            "gray-900": "#181C32"
                        }
                    },
                    "font-family": "Poppins"
                };

                var __HOMEPAGE_PATH__ = '{{ path('homepage') }}';
            </script>
            <!--end::Global Config-->


            <!--begin::Global Theme Bundle(used by all pages)-->
            <script src="{{ asset(plugins_path ~ 'global/plugins.bundle.js') }}"></script>
            <script src="{{ asset(plugins_path ~ 'custom/prismjs/prismjs.bundle.js') }}"></script>
            <script src="{{ asset(js_path ~ 'scripts.bundle.js') }}"></script>
            <!--end::Global Theme Bundle-->

            {# Bootbox #}
            <script src="{{ asset('plugins/bootbox/bootbox.js') }}" type="text/javascript"></script>

        {% endblock %}
    </body>
    <!-- END BODY -->
</html>