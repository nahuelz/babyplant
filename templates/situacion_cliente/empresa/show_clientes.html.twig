<div class="card card-detail">
    <div class="card-header d-flex justify-content-between align-items-center padding-10" style="min-height: 54px">
        <div class="card-title mb-0 d-flex align-items-center">
            <h4 class="card-label mb-0">Clientes Razon Social</h4>
        </div>
    </div>
    <div class="card-body padding-20">
        <div class="row">
            <div class="tab-content" style="width: 100%;">
                <div class="tab-pane active" id="portlet_pedido_listado">
                    <div class="portlet-body padding-0">
                        <div class="row">
                            <div class="col-md-12">
                                {% if razonSocial.clientes|length > 0 %}
                                    <div class="table-scrollable" style="border: none;overflow-y:scroll; height:400px;">
                                        <table class="table table-striped table-bordered table-advance table-hover" style="border: 1px solid #ddd;">
                                            <thead>
                                            <tr>
                                                <th class="text-center nowrap">Nombre</th>
                                                <th class="text-center nowrap">Apellido</th>
                                                <th class="text-center nowrap"></th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for cliente in razonSocial.clientes %}
                                                <tr>
                                                    <td class="v-middle nowrap text-center">
                                                        {{ cliente.nombre|default('-') }}
                                                    </td>
                                                    <td class="v-middle nowrap text-center">
                                                        {{ cliente.apellido|default('-') }}
                                                    </td>
                                                    <td class="text-center dt-acciones">
                                                        <div class="dropdown dropdown-inline">
                                                            <button type="button" class="btn btn-light-primary btn-icon btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                <i class="ki ki-bold-more-hor"></i>
                                                            </button>
                                                            <div class="dropdown-menu">
                                                                <a href="{{ path('usuario_show',{id: cliente.id}) }}" class="dropdown-item">
                                                                    <i class="la la-search" style="margin-right: 5px;"></i> Ver Cliente
                                                                </a>
                                                                <a href="{{ path('usuario_edit',{id: cliente.id}) }}" class="dropdown-item">
                                                                    <i class="la la-pencil" style="margin-right: 5px;"></i> Editar Cliente
                                                                </a>
                                                                <a href="{{ path('situacioncliente_show',{id: cliente.id}) }}" class="dropdown-item">
                                                                    <i class="la la-file-pdf" style="margin-right: 5px;"></i> Situacion Cliente
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                {% else %}
                                    <div class="row row-dictado-empty margin-top-20">
                                        <div class="col-md-12">
                                            <div class="note bg-grey-cararra font-size-13">
                                                La razon social no tiene clientes.
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>