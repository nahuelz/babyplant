{% extends 'base.html.twig' %}

{% block title %}Nueva Notificación{% endblock %}

{% import 'app/_macro_form.html.twig' as macro_form %}

{% block body %}
    {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}
    {% include ('app/_fields_errors.html.twig') %}
    <div class="card card-custom">
        <div class="card-header">
            <div class="card-title">
                <h3 class="card-label">Nueva Notificación</h3>
            </div>
            <div class="card-toolbar">
                <a href="{{ path('notificacion_todas_notificaciones') }}" class="btn btn-light-primary font-weight-bold">
                    <i class="fa fa-arrow-left"></i> Volver
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                {{ macro_form._new_field(form.titulo, 'col-md-12') }}
                {{ macro_form._new_field(form.contenido, 'col-md-12') }}
                {{ macro_form._new_field(form.imagenFile, 'col-md-12') }}
                {% if entity.imagen %}
                    <img src="{{ asset('uploads/notificaciones/' ~ notificacion.imagen) }}"
                         alt="Imagen de notificación"
                         style="max-width: 200px; margin-top: 10px;">
                {% endif %}
                {{ macro_form._new_field(form.fechaDesde, 'col-md-6') }}
                {{ macro_form._new_field(form.fechaHasta, 'col-md-6') }}
            </div>
            <div class="row">
                {{ macro_form._new_field(form.destinatarios, 'col-md-12') }}
            </div>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('notificacion_index') }}" class="btn btn-light-dark font-weight-bold">Volver</a>
            {{ form_widget(form.submit) }}
        </div>
    </div>
    {{ form_widget(form._token) }}
    {{ form_end(form, {"render_rest": false}) }}
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset(__PREFIX_JAVASCRIPT__ ~ 'config/config-form.js') }}"></script>
    <script src="{{ asset(__PREFIX_JAVASCRIPT__ ~ 'app/notificacion/new.js') }}"></script>

{% endblock %}