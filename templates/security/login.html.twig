        <style>
            .login-title {
                font-family: 'Poppins';
                font-size: 36px;
                color: #50535F;
                font-weight: 600;
            }
            .login-subtitle {
                font-family: 'Poppins';
                font-size: 12px;
                color: #50535F;
                font-weight: 500;
            }
            .login-button, #kt_login_forgot_submit, #kt_login_forgot_cancel{
                font-family: 'Poppins';
                font-size: 16px;
                font-weight: 600;
                text-transform: uppercase;
            }
            .login-button, #kt_login_forgot_submit {
                background: #37BBED;
                border-color: #37BBED;
                color: #FFFFFF;
            }
            #kt_login_forgot_cancel {
                color: #37BBED;
            }
            .login-button:hover {
                background: #2196f3;
                border-color: #2196f3;
                color: #FFFFFF;
            }

            .btn-afip {
                background: #FFFFFF;
                border-color: #37BBED;
                font-family: 'Poppins';
                font-size: 16px;
                font-weight: 600;
                color: #37BBED;
                width: 100%;
            }
            form#kt_login_signin_form input, #reset_password_request_form_email {
                border-color: #37BBED;
                background: white;
            }
            .g-recaptcha {
                margin: auto;
                display: table;
                margin-bottom: 1.75em;
            }

            .link-libro{
                color: #37BBED;
            }

            .link-libro:hover{
                color: #2196f3;
            }
        </style>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/x-icon" />
