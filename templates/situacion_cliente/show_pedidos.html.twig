<div class="card card-detail">
    <div class="card-header d-flex justify-content-between align-items-center padding-10">
        <div class="card-title mb-0">
            <h4 class="card-label mb-0">Pedidos</h4>
        </div>
        <div class="card-toolbar">
            <a href="{{ path('pedido_new', {'id': entity.id}) }}" class="btn btn-primary btn-sm">
                <i class="la la-plus"></i>
                Nuevo Pedido
            </a>
        </div>
    </div>
    <div class="card-body padding-1">
        <div class="tab-content">
            <div class="tab-pane active" id="portlet_pedido_listado">
                <div class="portlet-body padding-0">
                    {% if entity.pedidos|length > 0 %}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="table-scrollable" style="border: none;overflow-y:scroll; height:400px;">
                                    <table class="table table-striped table-bordered table-advance table-hover" style="border: 1px solid #ddd;">
                                        <thead>
                                        <tr>
                                            <th class="text-center nowrap">Pedido</th>
                                            <th class="text-center nowrap">Estado</th>
                                            <th class="text-center nowrap"></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for pedido in entity.pedidos %}
                                            {% for producto in pedido.pedidosProductos %}
                                                <tr>
                                                    <td class="v-middle nowrap text-center">
                                                        {{ producto|default('-') }}
                                                    </td>
                                                    <td class="v-middle nowrap text-center">
                                                        <div class="label label-inline font-size-10 font-dark font-weight-bold padding-15 {{ producto.estado.color|default('-') }}">
                                                            {{ producto.estado|default('-') }}
                                                        </div>
                                                    </td>
                                                    <td class="v-middle nowrap text-center">
                                                        <a href="{{ path('pedido_show',{id: pedido.id}) }}" target="_blank"
                                                           class="btn btn-light-primary btn-icon btn-sm blue" title="Ver pedido" style="height: 25px;width: 25px;">
                                                            <i class="fa fa-search text-white"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="row row-dictado-empty margin-top-20">
                            <div class="col-md-12">
                                <div class="note bg-grey-cararra font-size-13">
                                    El cliente no presenta pedidos registrados.
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>