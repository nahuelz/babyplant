<!DOCTYPE html>
<html lang="es">

<head>
    <style type="text/css">
        .table-border {

            margin-bottom: 10px;
        }
        .datos-productos-table{
            line-height: 7.5mm;
        }
        td{
            font-size: 15px;
        }
    </style>
    <title></title>
</head>

<body>
<div class="table-border header">
    <table width="100%" border="0">
        <tr>
            <td>
                <table cellpadding="5" cellspacing="5" style="padding: 0;">
                    <tr>
                        <td><strong>CLIENTE: {{ usuario.nombreCompleto|default('-') }}</strong></td>
                    </tr>
                    <tr>
                        <td><strong>ADELANTOS: {{ usuario.saldoAdelantos|money_format }}</strong></td>
                    </tr>
                    <tr>
                        <td><strong>TOTAL DEUDA: {{ usuario.cuentaCorrienteUsuario.getPendiente|money_format }}</strong></td>
                    </tr>
                    <tr>
                        <td><strong>A FAVOR: {{ usuario.cuentaCorrienteUsuario.saldo|money_format }}</strong></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>
<div class="table-border">
    <table class="datos-productos-table" >
        <thead>
        <tr>
            <th class="text-center">FECHA</th>
            <th class="text-center">MOVIMIENTO</th>
            <th class="text-center">MONTO</th>
            <th class="text-center">MODO PAGO</th>
            <th class="text-center">A FAVOR</th>
            <th class="text-center">DEUDA</th>
        </tr>
        </thead>
        <tbody>
        {% for movimiento in movimientos %}
            <tr>
                <td width="110" align="center">{{ movimiento.fechaCreacion is not null ? movimiento.fechaCreacion|date('d/m/Y') : '-' }}</td>
                <td width="200" align="center">{{  movimiento.tipoMovimiento }}</td>
                <td width="110" align="center">{{ movimiento.monto|money_format  }}</td>
                <td width="200" align="center">{{ movimiento.modoPago  }}</td>
                <td width="120" align="center">{{ movimiento.saldoCuenta|money_format  }}</td>
                <td width="120" align="center">{{ movimiento.montoDeuda|money_format|default('-')  }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</body>
</html>