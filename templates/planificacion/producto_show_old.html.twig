{% if entity is defined %}
    <div class="row">
        <div class="modal-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                        <span class="symbol-label">
                            <span class="svg-icon svg-icon-xl svg-icon-primary">
                                <i class="fas fa-leaf icon-2x text-dark"></i>
                            </span>
                        </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <span class="label label-inline {{ entity.tipoProducto.nombre}} font-weight-bold" style="padding: 20px">{{ entity.tipoVariedad }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="la la-file-alt icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <span class="label label-inline font-weight-bold {{ entity.estado.color }}" style="padding: 20px;">{{ entity.estado.nombre }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="fas fa-calendar-alt icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg"><strong>Fecha de siembra</strong></label>
                            <span class="text-muted">{{ entity.fechaSiembraReal is not null ? entity.fechaSiembraReal|date('d/m/Y') : '-' }}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="fas fa-user icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg">Cliente</label>
                            <span class="text-muted">{{ entity.pedido.cliente }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="fas fa-table icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg">Bandejas</label>
                            <span class="text-muted">{{ entity.cantidadBandejasReales }}({{ entity.tipoBandeja }})</span>
                        </div>
                    </div>
                </div>
                {% if entity.codigoSobre is not null %}
                <div class="col-md-4">
                        <div class="d-flex align-items-center mb-10 sobre">
                            <div class="symbol symbol-40 symbol-light-primary mr-5">
                                <span class="symbol-label">
                                    <span class="svg-icon svg-icon-xl svg-icon-primary">
                                        <i class="fas fa-envelope icon-2x text-dark"></i>
                                    </span>
                                </span>
                            </div>
                            <div class="d-flex flex-column font-weight-bold">
                                <label class="text-dark text-hover-primary mb-1 font-size-lg">Codigo del sobre</label>
                                <span class="text-muted">{{ entity.codigoSobre|default('-') }}</span>
                            </div>
                        </div>
                    </div>
                {% endif %}
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10 observacion">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="fas fa-comment icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg">Observacion</label>
                            <span class="text-muted">{{ entity.observacion|default('-') }}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group sobre-input" style="margin-bottom: -20px;">
                <div class="input-group input-group-lg">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-envelope"></i></span></div>
                    <input type="text" class="form-control" id="codSobre" placeholder="Ingrese el codigo del sobre" value="{{ entity.codigoSobre|default('') }}">
                </div>
            </div>
            <div class="form-group observacion-input" style="margin-top: 30px; display: none">
                <div class="input-group input-group-lg">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-comment"></i></span></div>
                    <input type="text" class="form-control" id="observacion" placeholder="Ingrese la observacion" value="{{ entity.observacion|default('') }}">
                </div>
            </div>
        </div>
    </div>
{% endif  %}
