    <!--begin::Body-->
    <body  id="kt_body"  class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading"  >

        <!--begin::Main-->
        <div class="d-flex flex-column flex-root">
            <!--begin::Login-->
            <div class="login login-4 login-signin-on d-flex flex-row-fluid" id="kt_login">
                <div class="d-flex flex-center flex-row-fluid bgi-size-cover bgi-position-top bgi-no-repeat" 
                     style="align-items: flex-start; background-image: url('{{ asset('theme/media/bg/bg-3.jpg') }}');">

                    <div class="login-form text-center p-15 position-relative overflow-hidden">
                        <!--begin::Login Header-->
                        <div class="d-flex flex-center mb-15">
                            <a href="#">
                                <img src="{{ asset('images/logo/logo.png') }}" class="max-h-75px" alt=""/>
                            </a>
                        </div>
                        <!--end::Login Header-->

                        <!--begin::Login Sign in form-->
                        <div class="login-signin">
                            <div class="mb-10">
                                <div class="login-title">Plataforma</div>
                                <div class="login-subtitle">Acceso para personal</div>
                            </div>
                            {% include 'app/_flash_messages.html.twig' %}
                            <form class="form" id="kt_login_signin_form" method="post">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                                <div class="form-group mb-5">
                                    <input type="string" value="{{ last_username }}" name="username" id="username" placeholder="Username" class="form-control h-auto form-control-solid py-4 px-8" required autofocus autocomplete="off">
                                </div>
                                <div class="form-group mb-5">
                                    <div class="input-group">
                                        <input type="password" name="password" placeholder="ContraseÃ±a" id="inputPassword" class="form-control h-auto form-control-solid py-4 px-8" required>
                                        <div id="togglePassword" class="input-group-append" style="right: 10px; cursor: pointer;">
                                            <span class="input-group-text">
                                                <i class="la la-eye" ></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <button class="btn login-button btn-block" type="submit">Ingresar</button>
                            </form>                         
                        </div>
                        <!--end::Login Sign in form-->
                    </div>



                </div>
            </div>
            <!--end::Login-->
        </div>
        <!--end::Main-->

