{% if entity is defined %}
    <div class="timeline timeline-5">
        <div class="modal-body">
            <div class="d-flex align-items-center mb-10">
                <div class="symbol symbol-40 symbol-light-primary mr-5">
                    <span class="symbol-label">
                        <span class="svg-icon svg-icon-xl svg-icon-primary">
                            <i class="fas fa-calendar-alt icon-2x text-dark"></i>
                        </span>
                    </span>
                </div>
                <div class="d-flex flex-column font-weight-bold">
                    <label class="text-dark text-hover-primary mb-1 font-size-lg"><strong>Fecha de siembra</strong></label>
                    <span class="text-muted">{{ entity.fechaSiembra is not null ? entity.fechaSiembra|date('d/m/Y') : '-' }}</span>
                </div>
            </div>
            <div class="d-flex align-items-center mb-10">
                <div class="symbol symbol-40 symbol-light-primary mr-5">
                    <span class="symbol-label">
                        <span class="svg-icon svg-icon-xl svg-icon-primary">
                            <i class="fas fa-user icon-2x text-dark"></i>
                        </span>
                    </span>
                </div>
                <div class="d-flex flex-column font-weight-bold">
                    <label class="text-dark text-hover-primary mb-1 font-size-lg">Cliente</label>
                    <span class="text-muted">{{ entity.pedido.cliente }}</span>
                </div>
            </div>
            <div class="d-flex align-items-center mb-10">
                <div class="symbol symbol-40 symbol-light-primary mr-5">
                    <span class="symbol-label">
                        <span class="svg-icon svg-icon-xl svg-icon-primary">
                            <i class="fas fa-leaf icon-2x text-dark"></i>
                        </span>
                    </span>
                </div>
                <div class="d-flex flex-column font-weight-bold">
                    <label class="text-dark text-hover-primary mb-1 font-size-lg">Producto</label>
                    <span class="text-muted">{{ entity.nombreCompleto }}</span>
                </div>
            </div>
            <div class="d-flex align-items-center mb-10">
                <div class="symbol symbol-40 symbol-light-primary mr-5">
                    <span class="symbol-label">
                        <span class="svg-icon svg-icon-xl svg-icon-primary">
                            <i class="fas fa-table icon-2x text-dark"></i>
                        </span>
                    </span>
                </div>
                <div class="d-flex flex-column font-weight-bold">
                    <label class="text-dark text-hover-primary mb-1 font-size-lg">Bandejas</label>
                    <span class="text-muted">{{ entity.cantBandejas }}({{ entity.tipoBandeja }})</span>
                </div>
            </div>

            {% if entity.codigoSobre is not null %}
                <div class="d-flex align-items-center mb-10">
                    <div class="symbol symbol-40 symbol-light-primary mr-5">
                        <span class="symbol-label">
                            <span class="svg-icon svg-icon-xl svg-icon-primary">
                                <i class="fas fa-envelope icon-2x text-dark"></i>
                            </span>
                        </span>
                    </div>
                    <div class="d-flex flex-column font-weight-bold">
                        <label class="text-dark text-hover-primary mb-1 font-size-lg">Codigo del sobre</label>
                        <span class="text-muted">{{ entity.codigoSobre|default('-') }}</span>
                    </div>
                </div>
            {% endif %}

            <div class="form-group">
                <div class="input-group input-group-lg">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-envelope"></i></span></div>
                    <input type="text" class="form-control" id="codSobre" placeholder="Ingrese el codigo del sobre" value="{{ entity.codigoSobre|default('') }}">
                </div>
            </div>
        </div>
    </div>
{% endif  %}
