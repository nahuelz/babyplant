        </div>
        <textarea class="form-control" data-pedido-id="{{ entity.id }}" id="observacionCamara" placeholder="Observación Cámara">{{ entity.observacionCamara|default('') }}</textarea>
        <div class="input-group-append">
            <button class="btn btn-primary" id="guardar-observacion-camara" type="button">
