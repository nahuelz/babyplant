{% if entity is defined %}
    <div class="row">
        <div class="modal-body" style="padding-top: 0px;padding-bottom: 0px;">
            <div class="row">
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                        <span class="symbol-label">
                            <span class="svg-icon svg-icon-xl svg-icon-primary">
                                <i class="fas fa-leaf icon-2x text-dark"></i>
                            </span>
                        </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <span class="label label-inline {{ entity.tipoProducto.nombre}} font-weight-bold" style="padding: 20px">{{ entity.tipoVariedad }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="la la-file-alt icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <span class="label label-inline font-weight-bold {{ entity.estado.color|default('') }}" style="padding: 20px;">{{ entity.estado.nombre|default('') }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10 bandejas">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                    <span class="symbol-label">
                        <span class="svg-icon svg-icon-xl svg-icon-primary">
                            <i class="fas fa-list-ul icon-2x text-dark"></i>
                        </span>
                    </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg">Bandejas Reales</label>
                            <span class="text-muted">{{ entity.cantidadBandejasReales|default(entity.cantidadBandejasReales) }}(X{{ entity.tipoBandeja }})</span>
                            <input type="hidden" id="cantidadBandejasReales" value="{{ entity.cantidadBandejasReales }}">
                        </div>
                    </div>
                </div>
            {% if entity.estado.codigoInterno == 4 %}
            </div>
                <div class="row">
                    <div class="col-md-12">
                        {% include 'salida_camara/new.html.twig' %}
                    </div>
                </div>
            {% else %}
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10 bandejas">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="fas fa-table icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg">Mesada</label>
                            <span class="text-muted">MESADA N° {{ entity.mesadaUno.tipoMesada.numero }} - BANDEJAS: {{ entity.mesadaUno.cantidadBandejas }}(X{{ entity.tipoBandeja }})</span>
                            {% if entity.mesadaDos is not null %}
                                <span class="text-muted">MESADA N° {{ entity.mesadaDos.tipoMesada.numero }} - BANDEJAS: {{ entity.mesadaDos.cantidadBandejas }}(X{{ entity.tipoBandeja }})</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{% endif  %}
<script>
    var __ID_ESTADO__ = {{ entity.estado.codigoInterno }};
</script>