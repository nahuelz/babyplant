{% if entity is defined %}
    <div class="timeline timeline-5">
        <div class="modal-body row">
            <div class="d-flex align-items-center mb-10 col-md-5">
                <div class="symbol symbol-40 symbol-light-primary mr-5">
                    <span class="symbol-label">
                        <span class="svg-icon svg-icon-xl svg-icon-primary">
                            <i class="fas fa-calendar-alt icon-2x text-dark"></i>
                        </span>
                    </span>
                </div>
                <div class="d-flex flex-column font-weight-bold">
                    <label class="text-dark text-hover-primary mb-1 font-size-lg"><strong>Fecha de siembra</strong></label>
                    <span class="text-muted">{{ entity.fechaSiembra is not null ? entity.fechaSiembra|date('d/m/Y') : '-' }}</span>
                </div>
            </div>
            <div class="d-flex align-items-center mb-10 col-md-7">
                <div class="symbol symbol-40 symbol-light-primary mr-5">
                    <span class="symbol-label">
                        <span class="svg-icon svg-icon-xl svg-icon-primary">
                            <i class="fas fa-user icon-2x text-dark"></i>
                        </span>
                    </span>
                </div>
                <div class="d-flex flex-column font-weight-bold">
                    <label class="text-dark text-hover-primary mb-1 font-size-lg">Cliente</label>
                    <span class="text-muted">{{ entity.pedido.cliente }}</span>
                </div>
            </div>
            <div class="d-flex align-items-center mb-10 col-md-5">
                <div class="symbol symbol-40 symbol-light-primary mr-5">
                    <span class="symbol-label">
                        <span class="svg-icon svg-icon-xl svg-icon-primary">
                            <i class="fas fa-envelope icon-2x text-dark"></i>
                        </span>
                    </span>
                </div>
                <div class="d-flex flex-column font-weight-bold">
                    <label class="text-dark text-hover-primary mb-1 font-size-lg">Codigo del sobre</label>
                    <span class="text-muted">{{ entity.codigoSobre|default('-') }}</span>
                </div>
            </div>
            <div class="d-flex align-items-center mb-10 col-md-7">
                <div class="symbol symbol-40 symbol-light-primary mr-5">
                    <span class="symbol-label">
                        <span class="svg-icon svg-icon-xl svg-icon-primary">
                            <i class="fas fa-leaf icon-2x text-dark"></i>
                        </span>
                    </span>
                </div>
                <div class="d-flex flex-column font-weight-bold">
                    <label class="text-dark text-hover-primary mb-1 font-size-lg">Producto</label>
                    <span class="text-muted">{{ entity.nombreCompleto }}</span>
                </div>
            </div>
            <div class="d-flex align-items-center mb-10 col-md-5">
                <div class="symbol symbol-40 symbol-light-primary mr-5">
                    <span class="symbol-label">
                        <span class="svg-icon svg-icon-xl svg-icon-primary">
                            <i class="fas fa-table icon-2x text-dark"></i>
                        </span>
                    </span>
                </div>
                <div class="d-flex flex-column font-weight-bold">
                    <label class="text-dark text-hover-primary mb-1 font-size-lg">Bandejas</label>
                    <span class="text-muted">{{ entity.cantBandejas }}(X{{ entity.tipoBandeja }})</span>
                </div>
            </div>
            <div class="row col-md-12">
                <div class="d-flex align-items-center mb-10 col-md-5 bandejas">
                    <div class="symbol symbol-40 symbol-light-primary mr-5">
                        <span class="symbol-label">
                            <span class="svg-icon svg-icon-xl svg-icon-primary">
                                <i class="fas fa-table icon-2x text-dark"></i>
                            </span>
                        </span>
                    </div>
                    <div class="d-flex flex-column font-weight-bold">
                        <label class="text-dark text-hover-primary mb-1 font-size-lg">Bandejas Reales</label>
                        <span class="text-muted">{{ entity.cantBandejasReales|default(entity.cantBandejas) }}(X{{ entity.tipoBandeja }})</span>
                    </div>
                </div>
                <div class="form-group col-md-7 bandejas-edit" style="display: none;">
                <div class="input-group input-group-lg">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-table"></i></span></div>
                    <input type="text" class="form-control" id="bandejas" placeholder="Ingrese la cantidad de bandejas" value="{{ entity.cantBandejasReales|default(entity.cantBandejas) }}">
                </div>
            </div>
            </div>
            <div class="row  col-md-12">
                <div class="d-flex align-items-center mb-10 col-md-5 observacion">
                    <div class="symbol symbol-40 symbol-light-primary mr-5">
                        <span class="symbol-label">
                            <span class="svg-icon svg-icon-xl svg-icon-primary">
                                <i class="fas fa-comment icon-2x text-dark"></i>
                            </span>
                        </span>
                    </div>
                    <div class="d-flex flex-column font-weight-bold">
                        <label class="text-dark text-hover-primary mb-1 font-size-lg">Observacion</label>
                        <span class="text-muted">{{ entity.observacion|default('-') }}</span>
                    </div>
                </div>
                <div class="form-group col-md-7 observacion-edit" style="display: none;">
                    <div class="input-group input-group-lg">
                        <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-comment"></i></span></div>
                        <input type="text" class="form-control" id="observacion" placeholder="Ingrese una observacion" value="{{ entity.observacion|default('') }}">
                    </div>
                </div>
            </div>
            <div class="row  col-md-12">
                <div class="d-flex align-items-center mb-10 col-md-5 hora">
                    <div class="symbol symbol-40 symbol-light-primary mr-5">
                        <span class="symbol-label">
                            <span class="svg-icon svg-icon-xl svg-icon-primary">
                                <i class="fas fa-calendar icon-2x text-dark"></i>
                            </span>
                        </span>
                    </div>
                    <div class="d-flex flex-column font-weight-bold">
                        <label class="text-dark text-hover-primary mb-1 font-size-lg">Hora de siembra</label>
                        <span class="text-muted">{{ entity.horaSiembra is not null ? entity.horaSiembra|date('d/m/Y H:i') : '-' }}</span>
                    </div>
                </div>
                <div class="form-group col-md-7 hora-edit" style="display: none;">
                    <div class="input-group input-group-lg">
                        <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-calendar"></i></span></div>
                        <input type="time" class="form-control" min="07:00" max="20:00" id="horaSiembra" placeholder="Ingrese una hora" value=">{{ entity.horaSiembra is not null ? entity.horaSiembra|date('H:i') : '-' }}">
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endif  %}
