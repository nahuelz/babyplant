<!DOCTYPE html>
<html lang="es">

    <head>
        <style type="text/css">
            .table-border {

                margin-bottom: 10px;
            }
            .datos-productos-table{
                line-height: 7.5mm;
            }
            td{
                font-size: 15px;
            }
        </style>
        <title></title>
    </head>

    <body>
        <div class="table-border header">
            <table width="100%" border="0">
                <tr>
                    <td>
                        <table cellpadding="5" cellspacing="5" style="padding: 0;">
                            <tr>
                                <td><strong>{{ entity.nombreCompleto|default('-') }}</strong></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
        <div class="table-border">
            <table class="datos-productos-table" >
                <thead>
                <tr>
                    <th class="text-center">FECHA</th>
                    <th class="text-center">TIPO</th>
                    <th class="text-center">MONTO</th>
                    <th class="text-center">MODO PAGO</th>
                    <th class="text-center">SALDO</th>
                </tr>
                </thead>
                <tbody>
                {% for movimiento in entity %}
                    <tr>
                        <td width="110" align="center">{{ movimiento.fechaCreacion is not null ? movimiento.fechaCreacion|date('d/m/Y') : '-' }}</td>
                        <td width="200" align="center">{{ movimiento.tipoMovimiento }}</td>
                        <td width="110" align="center">{{ movimiento.monto|money_format  }}</td>
                        <td width="200" align="center">{{ movimiento.modoPago  }}</td>
                        <td width="120" align="center">{{ movimiento.saldo|money_format  }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </body>
</html>