<div class="card card-detail">
    <div class="card-header d-flex justify-content-between align-items-center padding-10">
        <div class="card-title mb-0">
            <h4 class="card-label mb-0">Reservas</h4>
        </div>
        <div class="card-toolbar">
            <a href="{{ path('reserva_new', {'id': entity.id}) }}" class="btn btn-primary btn-sm">
                <i class="la la-plus"></i>
                Nueva Reserva
            </a>
        </div>
    </div>
    <div class="card-body padding-1">
        <div class="tab-content">
            <div class="tab-pane active" id="portlet_reserva_listado">
                <div class="portlet-body padding-0">
                    {% if entity.reservas|length > 0 %}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="table-scrollable" style="border: none;overflow-y:scroll; height:400px;">
                                    <table class="table table-striped table-bordered table-advance table-hover" style="border: 1px solid #ddd;">
                                        <thead>
                                        <tr>
                                            <th class="text-center nowrap">Reserva</th>
                                            <th class="text-center nowrap">Bandejas</th>
                                            <th class="text-center nowrap">Adelanto</th>
                                            <th class="text-center nowrap">Estado</th>
                                            <th class="text-center nowrap"></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for reserva in entity.reservas %}
                                            <tr>
                                                <td class="v-middle nowrap text-center">
                                                    {{ reserva.pedidoProducto|default('-') }}
                                                </td>
                                                <td class="v-middle nowrap text-center">
                                                    {{ reserva.cantidadBandejas|default('-') }}
                                                </td>
                                                <td class="v-middle nowrap text-center">
                                                    {{ reserva.adelanto|money_format|default('-') }}
                                                </td>
                                                <td class="v-middle nowrap text-center">
                                                    <div class="label label-inline font-size-10 font-dark font-weight-bold padding-15 {{ reserva.estado.color|default('-') }}">
                                                        {{ reserva.estado|default('-') }}
                                                    </div>
                                                </td>

                                                <td class=" text-center dt-acciones">
                                                    <div class="dropdown dropdown-inline">
                                                        <button type="button" class="btn btn-light-primary btn-icon btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <i class="ki ki-bold-more-hor"></i>
                                                        </button>
                                                        <div class="dropdown-menu">
                                                            <a href="{{ path('reserva_show',{id: reserva.id}) }}" class="dropdown-item">
                                                                <i class="la la-search" style="margin-right: 5px;"></i> Ver Reserva
                                                            </a>
                                                            <a href="#" class="dropdown-item link-ver-historico-reserva" data-href="{{ path('reserva_historico_estado',{id: reserva.id}) }}">
                                                                <i class="la la-file-alt" style="margin-right: 5px;"></i> HistÃ³rico de estados
                                                            </a>
                                                            <a href="{{ path('imprimir_reserva',{id: reserva.id}) }}" class="dropdown-item">
                                                                <i class="la la-file-pdf" style="margin-right: 5px;"></i> Imprimir Reserva
                                                            </a>
                                                            <a href="#" class="dropdown-item add-adelanto-reserva" data-reserva="{{ reserva.id }}">
                                                                <i class="fas fa-plus" style="margin-right: 5px;"></i> Agregar Adelanto
                                                            </a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="row row-dictado-empty margin-top-20">
                            <div class="col-md-12">
                                <div class="note bg-grey-cararra font-size-13">
                                    El cliente no presenta reservas registrados.
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>