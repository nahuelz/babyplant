{% if entity is defined %}
    <div class="row">
        <div class="modal-body" style="padding-top: 0px;padding-bottom: 0px;">
            <div class="row">
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                        <span class="symbol-label">
                            <span class="svg-icon svg-icon-xl svg-icon-primary">
                                <i class="fas fa-leaf icon-2x text-dark"></i>
                            </span>
                        </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <span class="label label-inline {{ entity.tipoProducto.nombre}} font-weight-bold" style="padding: 20px">{{ entity.numeroOrdenCompleto }} - {{ entity.tipoVariedad }} (X{{ entity.tipoBandeja }})</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="la la-file-alt icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <span class="label label-inline font-weight-bold {{ entity.estado.color }} estado" style="padding: 20px;">{{ entity.estado.nombre }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="fas fa-user icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg">Cliente</label>
                            <span class="text-muted">{{ entity.pedido.cliente }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10 fecha-entrada">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="fas fa-calendar-alt icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg"><strong>Fecha Siembra</strong></label>
                            <span class="text-muted fecha-siembra-hidden" style="display: none">{{ entity.fechaSiembraReal is not null ? entity.fechaSiembraReal|date('Y-m-d H:i') : entity.fechaSiembraReal|date('Y-m-d H:i') }}</span>
                            <span class="text-muted fecha-siembra">{{ entity.fechaSiembraReal is not null ? entity.fechaSiembraReal|date('d/m/Y H:i') : entity.fechaSiembraReal|date('d/m/Y') }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10 fecha-entrada">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="fas fa-calendar-alt icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg"><strong>Dia y hora de entrada a camara</strong></label>
                            <span class="text-muted fecha-entrada-camara-hidden" style="display: none">{{ entity.fechaEntradaCamara is not null ? entity.fechaEntradaCamara|date('Y-m-d H:i') : entity.fechaEntradaCamara|date('Y-m-d H:i') }}</span>
                            <span class="text-muted fecha-entrada-camara">{{ entity.fechaEntradaCamara is not null ? entity.fechaEntradaCamara|date('d/m/Y H:i') : entity.fechaEntradaCamara|date('d/m/Y') }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10 fecha-entrega-pedido">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="fas fa-calendar-alt icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg"><strong>Fecha Entrega Solicitada</strong></label>
                            <span class="text-muted fecha-entrega-hidden" style="display: none">{{ entity.fechaEntregaPedidoReal is not null ? entity.fechaEntregaPedidoReal|date('Y-m-d') : entity.fechaEntregaPedido|date('Y-m-d') }}</span>
                            <span class="text-muted fecha-entrega">{{ entity.fechaEntregaPedidoReal is not null ? entity.fechaEntregaPedidoReal|date('d/m/Y') : entity.fechaEntregaPedido|date('d/m/Y') }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10 bandejas">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                    <span class="symbol-label">
                        <span class="svg-icon svg-icon-xl svg-icon-primary">
                            <i class="fas fa-table icon-2x text-dark"></i>
                        </span>
                    </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg">Bandejas Sembradas / Pedidas</label>
                            <span class="text-muted">{{ entity.cantidadBandejasReales|default(entity.cantidadBandejasReales) }}(X{{ entity.tipoBandeja }}) / {{ entity.cantidadBandejasPedidas|default(entity.cantidadBandejasPedidas) }}(X{{ entity.tipoBandeja }})</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10 observacion">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                        <span class="symbol-label">
                            <span class="svg-icon svg-icon-xl svg-icon-primary">
                                <i class="fas fa-comment icon-2x text-dark"></i>
                            </span>
                        </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg">Observacion</label>
                            <span class="text-muted">{{ entity.observacion|default('-') }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10 observacion-camara">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                        <span class="symbol-label">
                            <span class="svg-icon svg-icon-xl svg-icon-primary">
                                <i class="fas fa-comment icon-2x text-dark"></i>
                            </span>
                        </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg">Observacion Camara</label>
                            <span class="text-muted">{{ entity.observacionCamara|default('-') }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group fecha-entrada-camara-edit" style="display: none;">
                        <label class="text-dark text-hover-primary mb-1 font-size-lg font-weight-bold">DIA Y HORA DE ENTRADA A CAMARA:</label>
                        <div class="input-group input-group-lg">
                            <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-calendar"></i></span></div>
                            <input type="datetime-local" class="form-control" min="07:00" max="20:00" id="fecha-entrada-camara" placeholder="Ingrese una fecha" value=">{{ entity.fechaEntradaCamara is not null ? entity.fechaEntradaCamara|date('H:i') : '-' }}">
                        </div>
                    </div>
                    <div class="form-group observacion-input" style="margin-top: 30px; display: none">
                        <div class="input-group input-group-lg">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-comment"></i></span>
                            </div>
                            <textarea class="form-control" id="observacion" placeholder="Observacion">{{ entity.observacion|default('') }}</textarea>
                        </div>
                    </div>
                    <div class="form-group observacion-camara-input" style="margin-top: 30px; display: none">
                        <div class="input-group input-group-lg">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-comment"></i></span>
                            </div>
                            <textarea class="form-control" id="observacionCamara" placeholder="Observacion CAMARA">{{ entity.observacionCamara|default('') }}</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif  %}