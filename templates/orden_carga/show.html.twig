{% if entity is defined %}
    <div class="row">
        <div class="modal-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="fas fa-user icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg">Cliente</label>
                            <span class="text-muted">{{ entity.clienteEntrega.nombreCorto }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="fas fa-user icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <label class="text-dark text-hover-primary mb-1 font-size-lg">Direccion</label>
                            <span class="text-muted">{{ entity.clienteEntrega.domicilio|default('-') }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-10">
                        <div class="symbol symbol-40 symbol-light-primary mr-5">
                            <span class="symbol-label">
                                <span class="svg-icon svg-icon-xl svg-icon-primary">
                                    <i class="la la-file-alt icon-2x text-dark"></i>
                                </span>
                            </span>
                        </div>
                        <div class="d-flex flex-column font-weight-bold">
                            <span class="label label-inline font-weight-bold estado {{ entity.estado.color|default('') }}" style="padding: 20px;">{{ entity.estado.nombre|default('') }}</span>
                        </div>
                    </div>
                </div>
            </div>
            {% set totalBandejas = 0 %}
            {% set mostrarMesada2 = false %}

            {% for entregaProducto in entity.entregasProductos %}
                {% set totalBandejas = totalBandejas + entregaProducto.cantidadBandejas %}

                {% if entregaProducto.pedidoProducto.mesadaDos %}
                    {% set mostrarMesada2 = true %}
                {% endif %}
            {% endfor %}
            <div class="row">
                <div class="col-12">
                    <div class="card-body pt-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped align-middle">
                                <thead class="thead-light">
                                <tr>
                                    <th>
                                        Productos
                                        <span class="text-muted font-size-sm ml-2">
                                            ({{ entity.entregasProductos|length }})
                                        </span>
                                    </th>
                                    <th class="text-center">Orden</th>
                                    <th class="text-center">Mesada 1</th>
                                    {% if mostrarMesada2 %}
                                        <th class="text-center">Mesada 2</th>
                                    {% endif %}
                                    <th class="text-center">Bandejas
                                        <span class="text-muted font-size-sm ml-2">
                                            ({{ totalBandejas }})
                                        </span>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entregaProducto in entity.entregasProductos %}
                                    {% set pedidoProducto = entregaProducto.pedidoProducto %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="symbol symbol-35 symbol-light-success mr-3">
                                                    <span class="symbol-label">
                                                        <i class="fas fa-seedling text-success"></i>
                                                    </span>
                                                </span>
                                                <span class="font-weight-bold text-dark">
                                                    <span class="label label-inline font-weight-bold" style="background-color:{{ pedidoProducto.tipoProducto.color }};color:#fff; padding: 20px">{{ pedidoProducto.tipoVariedad }} (X{{ pedidoProducto.tipoBandeja }})</span>
                                                </span>
                                            </div>
                                        </td>

                                        <td class="text-center" style="color:{{ pedidoProducto.tipoProducto.color }}; font-weight: bold">
                                            {{ pedidoProducto.numeroOrdenCompleto|default('-') }}
                                        </td>

                                        <td class="text-center">
                                            {{ pedidoProducto.mesadaUno ?: '-' }}
                                        </td>

                                        {% if mostrarMesada2 %}
                                            <td class="text-center">
                                                {{ pedidoProducto.mesadaDos ?: '-' }}
                                            </td>
                                        {% endif %}

                                        <td class="text-center">
                                            <span class="badge badge-pill badge-primary font-weight-bold px-4 py-2">
                                                {{ entregaProducto.cantidadBandejas|default(0) }}
                                            </span>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center py-10">
                                            <i class="fas fa-box-open fa-2x text-muted mb-3"></i>
                                            <div class="text-muted font-weight-bold">
                                                No hay productos en esta entrega
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif  %}

