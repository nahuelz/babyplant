<!DOCTYPE html>
<html>

<head>
    <style type="text/css">
        .table-border {

            margin-bottom: 10px;
        }
        .datos-productos-table{
            line-height: 7.5mm;
        }
        td{
            font-size: 15px;
        }
    </style>
</head>

<body>
<div class="table-border header">
    <table width="100%" border="0">
        <tr>
            <td>
                <table cellpadding="5" cellspacing="5" style="padding: 0;">
                    <tr>
                        <td><strong>CLIENTE: {{ entity.nombreCompleto|default('-') }}</strong></td>
                    </tr>
                    <tr>
                        <td><strong>ADELANTOS: {{ entity.saldoAdelantos|money_format }}</strong></td>
                    </tr>
                    <tr>
                        <td><strong>TOTAL DEUDA: {{ entity.cuentaCorrienteUsuario.getPendiente|money_format }}</strong></td>
                    </tr>
                    <tr>
                        <td><strong>A FAVOR: {{ entity.cuentaCorrienteUsuario.saldo|money_format }}</strong></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>
<div class="table-border">
    <table class="datos-productos-table">
        <thead>
        <tr>
            <th class="text-center">REMITO</th>
            <th class="text-center">FECHA</th>
            <th class="text-center">MONTO</th>
            <th class="text-center">ESTADO</th>
            <th class="text-center">PENDIENTE</th>
        </tr>
        </thead>
        {% for remito in entity.remitos %}
            {% if remito.estado.id != 3 and remito.estado.id != 4 and remito.pendiente > 0 %} {#  3 = PAGO, 4 = CANCELADO#}
            <tbody style="page-break-inside: avoid;">
                <tr>
                    <td colspan="8" style="border-bottom: 1px solid;"></td>
                </tr>
                <tr>
                    <td width="100" align="center">{{ remito.id }}</td>
                    <td width="100" align="center">{{ remito.fechaCreacion|date('d/m')  }}</td>
                    <td width="200" align="center">{{ remito.totalConDescuento|money_format }}</td>
                    <td width="150" align="center">{{ remito.estado }}</td>
                    <td width="200" align="center">{{ remito.pendiente|money_format }}</td>
                </tr>
            </tbody>
            {% endif %}
        {% endfor %}
        <tfoot>
        <tr>
            <td colspan="4" align="right"><strong>TOTAL PENDIENTE</strong></td>
            <td align="center"><strong>{{ entity.cuentaCorrienteUsuario.getPendiente|money_format }}</strong></td>
        </tr>
        </tfoot>
    </table>
</div>
</body>
</html>